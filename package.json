{
  "name": "poliqlo",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "prisma": {
    "seed": "node --loader ts-node/esm prisma/seed.ts"
  },
  "scripts": {
    "test": "ts-node node_modules/jasmine/bin/jasmine",
    "build": "tsc",
    "dev": "docker stop api && docker start db cache && NODE_ENV=dev NODE_OPTIONS=--trace-deprecation concurrently \"npx tsc --watch\" \"nodemon -q dist/index.js\"",
    "start": "docker compose up -d",
    "stop": "docker stop api db cache",
    "seed:db": "NODE_ENV=dev && docker start postgres redis && npx prisma db seed",
    "format:schemas": "prisma format --schema prisma/schema.prisma",
    "generate:schemas": "npm run format:schemas && prisma generate --schema=prisma/schema.prisma",
    "migrate:init": "npx prisma migrate dev --name init",
    "migrate:dev": "NODE_ENV=dev && docker start db cache && npm run generate:schemas && prisma migrate dev --schema=prisma/schema.prisma --name init",
    "migrate:create-only": "NODE_ENV=dev && docker start db cache && npm run generate:schemas && prisma migrate dev --create-only --schema=prisma/schema.prisma --name init",
    "migrate:deploy": "prisma migrate deploy --schema=prisma/schema.prisma",
    "db:push": "docker exec -i db /bin/bash -c 'pg_restore --clean -U admin -d db' < ./dump.sql"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.32.0",
    "connect-redis": "^6.1.3",
    "dotenv": "^16.0.1",
    "express": "4.18.1",
    "express-fileupload": "^1.4.0",
    "express-session": "^1.17.3",
    "ioredis": "^5.2.4",
    "jsonwebtoken": "^9.0.0",
    "prettier": "^2.7.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@prisma/client": "4.12.0",
    "@types/bcryptjs": "2.4.2",
    "@types/connect-redis": "0.0.18",
    "@types/express": "4.17.13",
    "@types/express-fileupload": "1.4.1",
    "@types/express-session": "1.17.5",
    "@types/node": "18.6.3",
    "@types/uuid": "8.3.4",
    "concurrently": "7.2.2",
    "nodemon": "2.0.19",
    "prisma": "4.12.0",
    "ts-node": "10.9.1",
    "typescript": "4.7.4"
  }
}
