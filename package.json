{
  "name": "poliqlo-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "prisma": {
    "seed": "node --loader ts-node/esm prisma/seed.ts"
  },
  "scripts": {
    "test": "ts-node node_modules/jasmine/bin/jasmine",
    "build": "tsc",
    "start": "docker compose up -d",
    "stop": "docker stop app database cache",
    "dev": "docker stop app && docker start database cache && NODE_ENV=dev concurrently \"npx tsc --watch\" \"nodemon -q dist/index.js\"",
    "seed:db": "NODE_ENV=dev && docker start database cache && npx prisma db seed",
    "format:schemas": "prisma format --schema prisma/poliqlo_schema.prisma",
    "generate:schemas": "npm run format:schemas && prisma generate --schema=prisma/poliqlo_schema.prisma",
    "migrate:init": "docker start database cache && npm run generate:schemas &&  prisma migrate dev --schema=prisma/poliqlo_schema.prisma --name poliqlo",
    "migrate:dev": "NODE_ENV=dev && docker start database cache && npm run generate:schemas && prisma migrate dev --create-only --schema=prisma/poliqlo_schema.prisma --name poliqlo",
    "migrate:deploy": "prisma migrate deploy --schema=prisma/poliqlo_schema.prisma"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.32.0",
    "connect-redis": "^6.1.3",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-fileupload": "^1.4.0",
    "express-session": "^1.17.3",
    "ioredis": "^5.2.4",
    "jsonwebtoken": "^8.5.1",
    "prettier": "^2.7.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@prisma/client": "^4.4.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/connect-redis": "^0.0.18",
    "@types/express": "^4.17.13",
    "@types/express-fileupload": "^1.4.1",
    "@types/express-session": "^1.17.5",
    "@types/node": "^18.6.3",
    "@types/uuid": "^8.3.4",
    "concurrently": "^7.2.2",
    "nodemon": "^2.0.19",
    "prisma": "^4.4.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}
